<?xml version="1.0" encoding="utf-8"?>
 <TabHost xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@android:id/tabhost"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent" >

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:orientation="horizontal" >

         <FrameLayout
             android:layout_width="0dip"
             android:layout_height="fill_parent"
             android:layout_weight="0.2" >

             <TabWidget
                 android:id="@android:id/tabs"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:visibility="gone" />

            

                 <LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                     android:orientation="vertical" >

                     <Button
                         android:id="@+id/Tab1"
                         android:layout_width="fill_parent"
                         android:layout_height="0dip"
                         android:layout_weight="1.0"
                         android:onClick="tabHandler"
                         android:drawableLeft="@drawable/notifylist" />

                     <Button
                         android:id="@+id/Tab2"
                         android:layout_width="fill_parent"
                         android:layout_height="0dip"
                         android:layout_weight="1.0"
                         android:onClick="tabHandler"
                        android:drawableLeft="@drawable/notifyalarm" />

                     <Button
                         android:id="@+id/Tab3"
                         android:layout_width="fill_parent"
                         android:layout_height="0dip"
                         android:layout_weight="1.0"
                         android:onClick="tabHandler"
                         android:drawableLeft="@drawable/travelplan"/>

                     <Button
                         android:id="@+id/Tab4"
                         android:layout_width="fill_parent"
                         android:layout_height="0dip"
                         android:layout_weight="1.0"
                         android:onClick="tabHandler"
                         android:drawableLeft="@drawable/pnrstatus" />

                     <Button
                         android:id="@+id/Tab5"
                         android:layout_width="fill_parent"
                         android:layout_height="0dip"
                         android:layout_weight="1.0"
                         android:onClick="tabHandler"
                         android:drawableLeft="@drawable/jbook"/>
                       
                 </LinearLayout>
           
         </FrameLayout>

         <FrameLayout
             android:id="@android:id/tabcontent"
             android:layout_width="0dip"
             android:layout_height="fill_parent"
             android:layout_weight="0.8" />
     </LinearLayout>

 </TabHost>

